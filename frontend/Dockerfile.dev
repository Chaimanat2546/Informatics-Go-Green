# Frontend Dockerfile for Development
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set environment for hot reload in Docker
ENV WATCHPACK_POLLING=true

# Start development server with hot reload
CMD ["npm", "run", "dev"]
